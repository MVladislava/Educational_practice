@model ISA.Models.UpdateVM.UpdateCarVM

@{
}
<hi>Редактирование данных об автомобиле</hi>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Регистрационный номер</label>
        <input type="text" class="form-control" asp-for="RegNumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Бренд</label>
        <input type="text" class="form-control" asp-for="Brand">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Модель</label>
        <input type="text" class="form-control" asp-for="Model">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Id Клиента</label>
        <input type="text" class="form-control" asp-for="ClientId" readonly>
    </div>

    <button type="submit" class="btn btn-primary" >Сохранить</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Cars">Удалить</button>
</form>