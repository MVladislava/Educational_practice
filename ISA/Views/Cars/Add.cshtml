@model ISA.Models.AddVM.AddCarViewModel

@{
}
<style>
    .input-validation-error {
        border-color: red;
    }
</style>
<hi>Добавление Авто</hi>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Регистрационный номер</label>
        <input type="text" class="form-control" asp-for="RegNumber">
        <span asp-validation-for="RegNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Бренд</label>
        <input type="text" class="form-control" asp-for="Brand">
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Модель</label>
        <input type="text" class="form-control" asp-for="Model">
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="" class="form-label">Клиент</label>
        @Html.DropDownListFor(x => x.ClientId, ViewBag.Client as SelectList, "Please select", new { @class = "form-control" })
        @Html.ValidationMessage("disja")
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
