@model ISA.Models.UpdateVM.UpdateOrderVM

@{
}
<hi>Редактирование данных о заказ-наряде</hi>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Дата</label>
        <input type="date" class="form-control" asp-for="Data">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Автомобиль</label>
        <input type="text" class="form-control" asp-for="CarsId">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Клиент</label>
        <input type="text" class="form-control" asp-for="ClientsId">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Услуга</label>
        <input type="text" class="form-control" asp-for="ServicesId" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Запчасть</label>
        <input type="text" class="form-control" asp-for="SparesId" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Сотрудник</label>
        <input type="text" class="form-control" asp-for="StaffsId" readonly>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Cars">Удалить</button>
</form>